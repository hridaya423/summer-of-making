                    %>
                    <div class="absolute top-0 right-0 p-2 z-0 origin-bottom"
                    style="transform: rotate(<%= rotation_intensity %>deg) translateY(calc(-100% + 2rem)) translateX(1rem); color: <%= item.user.user_profile&.balloon_color || '#ff6b6b' %>">
